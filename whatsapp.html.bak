        function setVisibility(id, visibility, c) {

            switch(id)
            {
                case 'contactD1':
                    document.getElementById(id).style.display = visibility;
                       document.getElementsById(c).style.display = visibility;
                       document.getElementsById('bh2').style.display = 'none';
                       
                     document.getElementById('contactD2').style.display = 'none';
                     document.getElementById('contactD3').style.display = 'none';
                     document.getElementById('contactD4').style.display = 'none';
                     document.getElementById('contactD5').style.display = 'none';
                    break;
                case 'contactD2':
                    document.getElementById(id).style.display = visibility;
                    document.getElementById('contactD1').style.display = 'none';
                    document.getElementById('contactD3').style.display = 'none';
                    document.getElementById('contactD4').style.display = 'none';
                    document.getElementById('contactD5').style.display = 'none';
                    break;
                case 'contactD3':
                    document.getElementById(id).style.display = visibility;
                    document.getElementById('contactD2').style.display = 'none';
                    document.getElementById('contactD1').style.display ='none';
                    document.getElementById('contactD4').style.display = 'none';
                    document.getElementById('contactD5').style.display = 'none';
                    break;
                case 'contactD4':
                    document.getElementById(id).style.display = visibility;
                    document.getElementById('contactD2').style.display = 'none';
                    document.getElementById('contactD3').style.display = 'none';
                    document.getElementById('contactD1').style.display = 'none';
                    document.getElementById('contactD5').style.display = 'none';
                    break;
                case 'contactD5':
                    document.getElementById(id).style.display = visibility;
                    document.getElementById('contactD2').style.display = 'none';
                    document.getElementById('contactD3').style.display = 'none';
                    document.getElementById('contactD4').style.display = 'none';
                    document.getElementById('contactD1').style.display = 'none';
                    break;
            }

        }
